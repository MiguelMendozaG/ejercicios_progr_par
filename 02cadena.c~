#include<stdio.h>
#include<pthread.h>
#include<stdlib.h>
#include<string.h>
#define NUM_HILOS 10

pthread_t tabla_thr[NUM_HILOS];

typedef struct{
    int id;
    char *cadena;
}thr_param_t;

thr_param_t param[NUM_HILOS];

void *hilo(thr_param_t *p){
    printf("%s %d \n", p->cadena, p->id);
    pthread_exit(&p->id);
} 

int main(){
    int i, tNum[NUM_HILOS];
    pthread_t tid[NUM_HILOS];
    for (i = 0; i<NUM_HILOS; i++){
        tNum[i] = i;
        if(pthread_create(&tid[i], NULL, hola, &tNum[i])){
            printf("\n error al crear el hilo \n ");
            exit(0);
        }
    }
    for (i=0; i<NUM_HILOS; i++)
        pthread_join(tid[i], NULL);

    return 0;
}
